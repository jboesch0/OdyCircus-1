<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/font"
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="0.3"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="0.4" >

            <ImageView
                android:id="@+id/logoody"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:contentDescription="logoody"
                android:scaleType="fitEnd"
                android:src="@drawable/logoody" />

            <TextView
                android:id="@+id/textPage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Evénement"
                android:textColor="@android:color/white"
                android:textSize="40sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="0.6"
            android:orientation="horizontal"
            android:gravity="bottom">"

            <Button
                android:id="@+id/button1"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="retouner" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="0.6"
        android:orientation="vertical"
        android:layout_gravity="bottom">
        <ScrollView 
            android:layout_width="fill_parent"
        	android:layout_height="250dip"
        	android:layout_margin="20dp"
        	android:background="@drawable/backgroundmenu">
			<LinearLayout
			    android:layout_width="fill_parent"
        		android:layout_height="fill_parent"
        		android:orientation="vertical">
				<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Soirée de clôture"
                    android:textColor="@android:color/white"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lieu: Belfort Circus - 2, rue Ernest Duvillard"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Information: Allez-y! Allez-y! Allez-y! Allez-y! Allez-y! Allez-y! Allez-y! Allez-y! Allez-y! Allez-y! Allez-y! Allez-y! Allez-y! Allez-y! Allez-y! Allez-y! Allez-y! Allez-y! Allez-y! Allez-y! Allez-y! Allez-y! Allez-y! Allez-y! Allez-y! Allez-y! Allez-y! Allez-y! Allez-y! Allez-y! Allez-y! Allez-y! Allez-y! "
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                
            </LinearLayout>
        </ScrollView>
        
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="0.1"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/camera"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ybuttoncamera" />

        <ImageView
            android:id="@+id/map"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ybuttonmap" />
    </LinearLayout>

</LinearLayout>